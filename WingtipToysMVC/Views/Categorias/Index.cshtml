@model IEnumerable<WingtipToysMVC.Models.Categoria>

@{
    ViewBag.Title = "Categorias";
}

<h2>@ViewBag.Title</h2>
<div>
 @Html.ActionLink("Criar Categorias", "Create")
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>
    @foreach (var cat in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => cat.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => cat.Descricao)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = cat.CategoriaID })
                @Html.ActionLink("Detalhes", "Details", new { id = cat.CategoriaID })
                @Html.ActionLink("Delete", "Index","Produtos", new {idCat = cat.CategoriaID}, null)


            </td>
        </tr>
    }
</table>
